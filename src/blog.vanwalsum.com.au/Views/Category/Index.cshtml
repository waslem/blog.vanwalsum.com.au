@model List<blog.vanwalsum.com.au.Models.CategoryViewModels.CategorySummaryViewModel>
@{
    ViewData["Title"] = "Categories";
}

<div class="row">
    <div class="col-md-12 ">

        <ol class="breadcrumb" style="margin-top:25px; background-color:inherit">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active"><a href="/Category">Categories</a></li>
        </ol>
    </div>
    <div class="col-md-3">
        <div class="well">
            <!-- sidebar -->
            @await Component.InvokeAsync("SideBar")
        </div>
    </div>
    <div class="col-md-9">
        @if (Model.Count > 0)
        {
            foreach (var category in Model)
            {
                <div>
                    <h2>@category.CategoryName</h2>
                    <p>insert image here @category.CategoryImgUrl</p>
                </div>
            }
        }
        else
        {
            <h2>There are no categories!</h2>
            if (User.Identity.IsAuthenticated)
            {
                <div>
                    Create one 
                </div>
            }
            else
            {
                <div>
                    sign up here 
                </div>
            }
        }
    </div>

</div>
